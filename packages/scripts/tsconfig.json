{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "types": ["node", "playwright"]
  },
  "references": [{ "path": "../lib" }],
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/types/**/*.d.ts"],
  "exclude": ["dist"]
}
