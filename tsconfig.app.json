// tsconfig.app.json
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,

    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "verbatimModuleSyntax": false,

    "rootDir": ".",
    "outDir": "dist",

    "paths": {
      "@lib/*": ["lib/*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "src/*": ["src/*"]
    },

    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next", "dist", "scripts"]
}
