{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "verbatimModuleSyntax": true,

    "rootDir": "scripts",
    "outDir": "dist/scripts",

    "noEmit": false,
    "declaration": false,
    "sourceMap": false,

    "isolatedModules": false,
    "skipLibCheck": true,

    "types": ["node", "playwright"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["scripts/**/*.ts", "scripts/**/*.tsx", "scripts/**/*.d.ts"],
  "exclude": [
    "node_modules",
    ".next",
    "public",
    "dist",
    "tests",
    "lib-src",     // <-- make extra sure the program cannot see sources
    "lib/**/*.d.ts" // (harmless either way; compiler will pick them for types by path)
  ]
}
